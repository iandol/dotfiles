#!/bin/sh

if [ -d ~/Desktop/Beast_mmd/ ]; then
	olddir=$(pwd)
	cd ~/Desktop/Beast_mmd/
	echo "=================================DELETE OLD VERSIONS"
	[[ -f "The Beast.fodt" ]] && rm -rf The\ Beast.fodt; echo "Delete The Beast.fodt"
	[[ -f "The BeastPARSE.fodt" ]] && rm -rf The\ BeastPARSE.fodt; echo "Delete The BeastPARSE.fodt"
	[[ -f "BeastPandoc.odt" ]] && rm -rf BeastPandoc.odt; echo "Delete BeastPandoc.odt"
	echo "=================================PARSING MMD"
	~/bin/fodtparse.rb The\ Beast.md
	echo "=================================PANDOC OPTION"
	[[ -e `which pandoc` ]] && pandoc The\ Beast.md --from markdown_mmd+implicit_figures+subscript+superscript-all_symbols_escapable -o BeastPandoc.odt
	echo "=================================OPENING DOCS"
	[[ -f "The BeastPARSE.fodt" ]] && open The\ BeastPARSE.fodt &
	#[[ -f "BeastPandoc.odt" ]] && open BeastPandoc.odt &
	cd $olddir
	unset olddir
fi

#!/bin/sh

if [ -d ~/Desktop/Beast_mmd/ ]; then
	olddir=$(pwd)
	cd ~/Desktop/Beast_mmd/
	echo "=================================DELETE OLD VERSIONS"
	[[ -f "The Beast.fodt" ]] && rm -rf Beast.fodt; echo "Delete The Beast.fodt"
	[[ -f "The BeastPARSE.fodt" ]] && rm -rf BeastPARSE.fodt; echo "Delete The BeastPARSE.fodt"
	[[ -f "BeastPandoc.odt" ]] && rm -rf BeastPandoc.odt; echo "Delete BeastPandoc.odt"
	echo "=================================PARSING MMD to FODT"
	~/bin/fodtparse Beast.md
	echo "=================================TRYING PANDOC PARSE TOO"
	[[ -e `which pandoc` ]] && pandoc Beast.md --from markdown_mmd+tex_math_dollars+pipe_tables+implicit_figures+subscript+superscript-all_symbols_escapable -o BeastPandoc.odt
	echo "=================================OPENING DOCUMENT"
	[[ -f "The BeastPARSE.fodt" ]] && open BeastPARSE.fodt &
	#[[ -f "BeastPandoc.odt" ]] && open BeastPandoc.odt &
	cd $olddir
	unset olddir
fi

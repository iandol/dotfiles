#!/usr/bin/env swift
import Foundation

@discardableResult
func shell(_ args: String...) -> Int32 {
    let task = Process()
    task.launchPath = "/usr/bin/env"
    task.arguments = args
    task.launch()
    task.waitUntilExit()
    return task.terminationStatus
}

print("Hello World")
shell("echo","-n","-----Simple ls-----")
shell("echo")
shell("ls")
shell("echo","-n","-----Full ls-----")
shell("echo")
shell("ls", "-a","-l","-H","-@")
shell("echo","\n-----Pandoc version-----")
shell("pandoc","--version")